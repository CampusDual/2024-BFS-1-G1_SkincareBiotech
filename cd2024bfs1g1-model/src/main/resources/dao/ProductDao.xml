<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PRODUCTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>PRO_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>PRO_ID</Column>
    </UpdateKeys>
    <GeneratedKey>pro_id</GeneratedKey>
    <Queries>
        <Query id="PRO_ENABLED">
            <Sentence>
            <![CDATA[
                WITH ENABLED_CHECKER AS (
                    SELECT *, COALESCE(PRO_SALE, PRO_PRICE) AS PRO_REAL_PRICE
                    FROM ${mainschema}.PRODUCTS
                    WHERE PRO_ENABLED = TRUE
                )
                SELECT #COLUMNS#
                FROM ENABLED_CHECKER
                #WHERE#
            ]]>
        </Sentence>
        </Query>

        <Query id="pro_featured">
            <Sentence>
                <![CDATA[
                    WITH complete_overview AS (
                        SELECT *, COALESCE (((pro_price - pro_sale) / pro_price) * 100, 0) AS DISCOUNT, (
                            SELECT COUNT(*)
                            FROM ${mainschema}.ORD_LINES AS ol
           			        WHERE ol.pro_id = p.pro_id
                        ) AS AMMOUNT_OF_SALES
                        FROM ${mainschema}.PRODUCTS AS p
                        WHERE pro_enabled = TRUE
                    )
                SELECT #COLUMNS#
                FROM complete_overview
                #WHERE#
                #ORDER#
            ]]>
            </Sentence>
        </Query>

    </Queries>

</JdbcEntitySetup>