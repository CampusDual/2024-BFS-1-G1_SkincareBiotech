<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PRODUCTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>PRO_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>PRO_ID</Column>
    </UpdateKeys>
    <GeneratedKey>pro_id</GeneratedKey>
    <Queries>
        <Query id="default">
            <AmbiguousColumns>
                <AmbiguousColumn name="PRO_ID" prefix="P"/>
                <AmbiguousColumn name="PRO_ID" prefix="UP"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    SELECT #COLUMNS#
                    FROM ${mainschema}.PRODUCTS P
                    INNER JOIN ${mainschema}.USER_PRICE AS UP ON P.PRO_ID = UP.PRO_ID
                    #WHERE#
                 ]]>
            </Sentence>
        </Query>
        <Query id="PRO_ENABLED">
            <AmbiguousColumns>
                <AmbiguousColumn name="CAT_ID" prefix="EC"/>
                <AmbiguousColumn name="BRA_ID" prefix="EC"/>
                <AmbiguousColumn name="PGE_ID" prefix="EC"/>
                <AmbiguousColumn name="PRO_ID" prefix="EC"/>
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                WITH ENABLED_CHECKER AS (
                    SELECT *
                    FROM ${mainschema}.PRODUCTS AS P
                    WHERE PRO_ENABLED = TRUE
                )
                SELECT #COLUMNS#
                FROM ENABLED_CHECKER EC
                INNER JOIN ${mainschema}.BRANDS AS B ON EC.BRA_ID = B.BRA_ID
                INNER JOIN ${mainschema}.PRO_GENDER AS G ON EC.PGE_ID = G.PGE_ID
                INNER JOIN ${mainschema}.CATEGORIES AS C ON EC.CAT_ID = C.CAT_ID
                INNER JOIN ${mainschema}.USER_PRICE AS UP ON EC.PRO_ID = UP.PRO_ID
                #WHERE#
            ]]>
            </Sentence>
        </Query>

        <Query id="pro_featured">
            <Sentence>
                <![CDATA[
                    WITH complete_overview AS (
                        SELECT *, COALESCE (((pro_price - pro_sale) / pro_price) * 100, 0) AS DISCOUNT, (
                            SELECT COUNT(*)
                            FROM ${mainschema}.ORD_LINES AS ol
           			        WHERE ol.pro_id = p.pro_id
                        ) AS AMMOUNT_OF_SALES
                        FROM ${mainschema}.PRODUCTS AS p
                        WHERE pro_enabled = TRUE
                    )
                SELECT #COLUMNS#
                FROM complete_overview
                #WHERE#
                #ORDER#
            ]]>
            </Sentence>
        </Query>

    </Queries>

</JdbcEntitySetup>