<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="PRODUCTS_VIEW"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>PROV_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>PROV_ID</Column>
    </UpdateKeys>
    <GeneratedKey>prov_id</GeneratedKey>
    <Queries>
        <Query id="PROV_VIEW_PRODUCT">
            <Sentence>
                    <![CDATA[
                        WITH T as(
                            SELECT
                                pro_id,
                                DATE(prov_date) AS visit_date,
                                COUNT(DISTINCT prov_uid) AS visit_count
                            FROM
                                public.products_view
                            GROUP BY
                                pro_id,
                                DATE(prov_date)
                        )
                        SELECT #COLUMNS#
                        FROM T
                        #WHERE#
                    ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>